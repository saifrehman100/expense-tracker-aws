# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# DynamoDB Tables
USERS_TABLE=expense-tracker-users
EXPENSES_TABLE=expense-tracker-expenses
BUDGETS_TABLE=expense-tracker-budgets
RECEIPTS_TABLE=expense-tracker-receipts

# S3 Buckets
RECEIPTS_BUCKET=expense-tracker-receipts

# Cognito
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# SES
SES_SENDER_EMAIL=noreply@yourdomain.com
SES_REGION=us-east-1

# API Gateway
API_GATEWAY_URL=https://xxxxxxxxxx.execute-api.us-east-1.amazonaws.com/Prod

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=dev
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OCR Settings
TEXTRACT_CONFIDENCE_THRESHOLD=80
COMPREHEND_CONFIDENCE_THRESHOLD=70

# Budget Alert Settings
BUDGET_ALERT_THRESHOLD=90

# Local Development (LocalStack)
LOCALSTACK_ENDPOINT=http://localhost:4566
USE_LOCALSTACK=false
